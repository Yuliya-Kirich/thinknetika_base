<div class="rails-default-about-page">
  <h1> Прохождение теста <%= @test_passage.test.title %></h1>
  <p> Вопрос: <b><%= @test_passage.current_question.body %></b></p>
  <p> Номер текущего вопроса: <%= @test_passage.question_number %>
   из <%= @test_passage.test.questions.count %> вопросов.
  </p>
  <%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form|%>
    <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |b|%>
      <p>
        <%= b.check_box id: "answer_ids_#{b.object.id}" %>
        <%= b.label %>
      </p>
    <% end %>
    <p><%= form.submit "Подтвердить" %></p>
  <% end %>
</div>
