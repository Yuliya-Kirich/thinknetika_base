
<div class="container mt-5 bg-primary-subtle p-4 text-center " style="width: 86%; margin: 0 auto;">
  <h1 class="fw-bold text-uppercase" style="font-family: 'Verdana', sans-serif;">
    <%= t('.header') %>
  </h1>

  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="table-light">
      <tr>
        <th scope="col"><%= link_to "Идентификатор теста", :sort => "id" %></th>
        <th scope="col"><%= link_to "Тест", :sort => "title" %></th>
        <th scope="col"><%= link_to "Дата обновления", :sort => "updated_at" %></th>
        <th scope="col"><%= link_to "Уровень", :sort => "level" %></th>
        <th scope="col">Количество вопросов</th>
        <th colspan="6"> Действия </th>
      </tr>
      </thead>
      <tbody>
      <%= render @test %>
      </tbody>
    </table>

  </div>
</div>
