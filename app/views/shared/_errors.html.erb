<%if resource.errors.present? %>
    <div class="error_message">
      <br><br>
  <div>
    <h4><%= t('helpers.shared.errors.header', count: resource.errors.count) %>:</h4>
    <p>
      <%resource.errors.full_messages.each do |message| %>
        <li><%=message %></li>
      <%end %>
    </p>
    <p><strong>Debug Information:</strong> <%= resource.errors.inspect %></p>
  </div>
      <br><br>
    </div>
<% end %>
